{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy - Home</title>
{% endblock %}

{% block content %}

    <section>
        <div class="container">
            <div class="banner">
                <div class="banner-info">
                    <h2>{{ banner.title }}</h2>
                    <p>{{ banner.subtitle }}</p>
                </div>
                <div class="banner-img">
                    <img src="/chef.png" alt="">
                </div>
            </div>
        </div>
    </section>

    <main>
        <div class="container">
            <h3>Mais acessadas</h3>
            <section class="wraper-receitas">

            {% for item in items %}
                <div class="receitas">
                    <img src="{{ item.image }}" alt="Imagem de {{ item.title }}">
                    <h4>{{ item.title }}</h4>
                    <p>{{ item.author }}</p>
                </div>
            {% endfor %}

            </section>
        </div>
    </main>

    {% endblock %}