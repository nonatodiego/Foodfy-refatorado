{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy - Receitas</title>
{% endblock %}

{% block content %}

    <main>
        <div class="container">
            <section class="wraper-receitas">

            {% for item in items %}
                <div class="receitas cursor">
                    <img src="{{ item.image }}" alt="Imagem de {{ item.title }}">
                    <h4>{{ item.title }}</h4>
                    <p>{{ item.author }}</p>
                </div>
            {% endfor %}

            </section>
        </div> 

        </section>
    </main>
    <script src="/scripts.js"></script>
    {% endblock %}